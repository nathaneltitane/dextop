#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# usage #

# variables #

script=$(basename -- "${BASH_SOURCE[0]}")

# initial prompt clear #

clear

# enable quiet package install

export DEBIAN_FRONTEND=noninteractive

# update packages list

console.update

# upgrade installed packages

console.upgrade

# packages #

applications_list=(
	leocad
	povray
	youtube-dl
)

frameworks_list=(
	libqt5concurrent5
	libqt5opengl5
	libqt5printsupport5
	libqt5xml5
)

utilities_list=(
	curl
	ffmpeg
	git
	hub
	jq
	nano
	net-tools
	p7zip
	python
	ssh
	sudo
	unrar
	wmctrl
	xdotool
	zip
)

security_list=(
	ca-certificates
	openssl	
)

session_manager_list=(
	dbus-x11
	x11-utils
)

themes_list=(
	arc-theme
	qt5-style-platform-gtk2
	qt5-style-plugin-gtk2
)

vnc_list=(
	tigervnc-common
	tigervnc-standalone-server
)

# desktop environments

dwm_list=(
	dwm
	dmenu
	feh
	irssi
	micro
	ranger
	stterm
	surf
	suckless-tools
)

xfce4_list=(
	xfce4
	xfce4-goodies
	xfce4-appfinder
	xfce4-appmenu-plugin
	xfce4-battery-plugin
	xfce4-clipman
	xfce4-clipman-plugin
	xfce4-cpufreq-plugin
	xfce4-cpugraph-plugin
	xfce4-datetime-plugin
	xfce4-dev-tools
	xfce4-dict
	xfce4-diskperf-plugin
	xfce4-equake-plugin
	xfce4-eyes-plugin
	xfce4-fsguard-plugin
	xfce4-genmon-plugin
	xfce4-goodies
	xfce4-indicator-plugin
	xfce4-mailwatch-plugin
	xfce4-mount-plugin
	xfce4-mpc-plugin
	xfce4-netload-plugin
	xfce4-notes
	xfce4-notes-plugin
	xfce4-notifyd
	xfce4-panel
	xfce4-panel-profiles
	xfce4-places-plugin
	xfce4-power-manager
	xfce4-power-manager-data
	xfce4-power-manager-plugins
	xfce4-pulseaudio-plugin
	xfce4-screensaver
	xfce4-screenshooter
	xfce4-sensors-plugin
	xfce4-session
	xfce4-settings
	xfce4-smartbookmark-plugin
	xfce4-sntray-plugin
	xfce4-sntray-plugin-common
	xfce4-statusnotifier-plugin
	xfce4-systemload-plugin
	xfce4-taskmanager
	xfce4-terminal
	xfce4-time-out-plugin
	xfce4-timer-plugin
	xfce4-verve-plugin
	xfce4-volumed
	xfce4-wavelan-plugin
	xfce4-weather-plugin
	xfce4-whiskermenu-plugin
	xfce4-xkb-plugin
	midori
	elementary-xfce-icon-theme
	tango-icon-theme
	blackbird-gtk-theme
	bluebird-gtk-theme
	greybird-gtk-theme
	breeze-cursor-theme
)

# install list #

install_list=()

# options #

# full

if [[ "${install_option}" = "full" ]]
then
	desktop_environment_list=(
		${xfce4_list[@]}
	)
	
	install_list+=(
		${desktop_environment_list[@]}
		${themes_list[@]}
	)
fi

# minimal

if [[ "${install_option}" = "minimal" ]]
then
	desktop_environment_list=(
		${dwm_list[@]}
	)
	
	install_list+=(
		${desktop_environment_list[@]}
	)
fi

# core packages lists to load and install

install_list+=(
	${applications_list[@]}
	${frameworks_list[@]}
	${utilities_list[@]}
	${session_manager_list[@]}
	${security_list[@]}
	${vnc_list[@]}
)

# install #

console.install ${install_list[@]}
