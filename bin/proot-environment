#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# usage #

# variables #

script=$(basename -- "${BASH_SOURCE[0]}")

#directories #

# files #

console.inf "Creating required configuration files."
echo

# .bash_aliases

cat <<- 'FILE' >> "$PROOT_DIRECTORY"/home/${user_name}//.bash_aliases

FILE

# .bash_profile

cat <<- 'FILE' >> "$PROOT_DIRECTORY"/home/${user_name}//.bash_profile

FILE

# .bash_logout

cat <<- 'FILE' >> "$PROOT_DIRECTORY"/home/${user_name}//.bash_logout

FILE

# .bashrc

cat <<- 'FILE' >> "$PROOT_DIRECTORY"/home/${user_name}//.bashrc

FILE

# .profile

cat <<- 'FILE' >> "$PROOT_DIRECTORY"/home/${user_name}//.profile

FILE